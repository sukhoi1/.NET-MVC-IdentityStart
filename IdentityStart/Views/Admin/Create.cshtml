@using IdentityStart.Models
@model CreateModel

@{
    ViewBag.Title = "Create User";
}

<h2>Create User</h2>

<p>Example 1: Add "test" user, "test" email, "test" password. A validation error message will be displayed.</p>
<p>Example 2: Add "test" user, "test" email, "test11" password and see a validation message.</p>

@Html.ValidationSummary(false)

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new {@class = "form-control"})
    </div>
    <div class="form-group">
        <label>Password</label>
        @Html.PasswordFor(x => x.Password, new {@class = "form-control"})
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}